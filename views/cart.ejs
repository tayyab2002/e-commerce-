<%- include('./partials/header') %> <% user.cart.forEach(item => { %>
<div class="w-full min-h-screen flex flex-row items-start px-10 py-10 gap-5">
  <div
    class="w-[30%] rounded-md overflow-hidden border border-gray-200 shadow-lg"
  >
    <div class="w-80 bg-yellow-500">
      <img
        class=""
        src="data:image/jpeg;base64, <%= item.image.toString('base64') %>"
        alt=""
      />
    </div>
    <div class="w-full flex justify-between px-5 py-4">
      <h3 class="text-2xl font-semibold"><%= item.name %></h3>
      <div class="flex items-center gap-2">
        <button
          class="w-7 h-7 bg-white flex rounded-full items-center justify-center border border-gray-300 hover:bg-gray-200 transition"
        >
          <i class="ri-add-line"></i>
        </button>
        <div
          class="px-2 py-1 rounded-md bg-white text-black border border-gray-300"
        >
          01
        </div>
        <button
          class="w-7 h-7 bg-white flex rounded-full items-center justify-center border border-gray-300 hover:bg-gray-200 transition"
        >
          <i class="ri-subtract-line"></i>
        </button>
      </div>
    </div>
    <div
      class="flex items-center justify-between px-5 py-3 border-t border-gray-200"
    >
      <h4 class="text-lg">Net Total</h4>
      <h2 class="text-lg font-bold">Rs <%= item.price %></h2>
    </div>
  </div>

  <div class="w-[70%]">
    <h3 class="text-xl font-semibold mb-4">Price Breakdown</h3>
    <div class="px-10">
      <div class="flex justify-between mt-2">
        <h4 class="w-1/3 text-gray-600">Total MRP</h4>
        <h4 class="text-gray-800">Rs 1920</h4>
      </div>
      <div class="flex justify-between mt-2">
        <h4 class="w-1/3 text-gray-600">Discount on MRP</h4>
        <h4 class="text-gray-800">Rs <%= item.discount %></h4>
      </div>
      <div class="flex justify-between mt-2">
        <h4 class="w-1/3 text-gray-600">Platform Fee</h4>
        <h4 class="text-gray-800">Rs 20</h4>
      </div>
      <div class="flex justify-between mt-2">
        <h4 class="w-1/3 text-gray-600">Shipping Fee</h4>
        <h4 class="text-green-600 font-semibold">FREE</h4>
      </div>
    </div>

    <div class="w-full h-[1px] bg-gray-300 mt-10"></div>

    <div class="flex justify-between mt-5 px-10">
      <h3 class="w-1/3 text-xl">Total Amount</h3>
      <h3 class="font-semibold text-xl text-green-600">Rs <%= bill %></h3>
    </div>

    <form action="" class="mt-10">
      <button
        type="submit"
        class="bg-green-600 text-white py-3 px-10 rounded-md hover:bg-green-700 transition"
      >
        Proceed to Checkout
      </button>
    </form>
  </div>
</div>
<%}); %>
